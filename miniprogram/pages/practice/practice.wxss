/* pages/practice/practice.wxss */
.page-container {
  padding: 40rpx;
}
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.page-title {
  font-size: 56rpx;
  font-weight: 700;
}
.honor-card {
  background: linear-gradient(135deg, #007aff, #0056b3);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}
.honor-content {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 32rpx;
}
.honor-item {
  text-align: center;
}
.honor-value {
  font-size: 56rpx;
  font-weight: 700;
}
.honor-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 8rpx;
}
.honor-divider {
  width: 2rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.3);
}
.honor-action {
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}
.honor-action .arrow {
  margin-left: 12rpx;
  font-weight: bold;
}
.btn-hover {
  background-color: rgba(255, 255, 255, 0.25);
}
.homework-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease-in-out;
}
.card-hover {
  transform: scale(0.98);
}
.homework-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1c1c1e;
  margin-bottom: 16rpx;
}
.homework-meta {
  font-size: 28rpx;
  color: #8e8e93;
}
.meta-divider {
  margin: 0 12rpx;
}
.start-arrow {
  font-size: 40rpx;
  color: #c7c7cc;
}
.empty-state {
  text-align: center;
  margin-top: 200rpx;
  color: #8e8e93;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}
.empty-state text:first-child {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}