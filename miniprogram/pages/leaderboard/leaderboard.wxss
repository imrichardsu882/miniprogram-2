/* È°µÈù¢ÂÆπÂô® */
.page-container {
  padding: 32rpx;
  padding-top: 32rpx; /* ÁßªÈô§Ëá™ÂÆö‰πâÂØºËà™Ê†èÁöÑpadding-top */
  min-height: 100vh;
  background: #f7f8fa;
}

.header { 
  text-align: center; 
  margin-bottom: 24rpx; 
}

.title { font-size: 40rpx; font-weight: 800; color: #111827; }
.subtitle { 
  color: #6b7280; 
  margin-top: 6rpx; 
  font-size: 28rpx;
}

/* Áª¥Â∫¶ÈÄâÊã©Âô® */
.dimension-selector {
  margin: 24rpx 0;
}

.dimension-scroll {
  white-space: nowrap;
}

.dimension-item {
  display: inline-block;
  margin-right: 16rpx;
  padding: 16rpx 20rpx;
  border-radius: 24rpx;
  background: #f3f4f6;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 120rpx;
  transform: scale(1);
}

.dimension-item:active {
  transform: scale(0.95);
}

.dimension-item.active {
  background: linear-gradient(135deg, #007aff, #0056b3);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.dimension-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.dimension-name {
  font-size: 24rpx;
  font-weight: 500;
}

/* Êó∂Èó¥ËåÉÂõ¥ÈÄâÊã©Âô® */
.time-range-selector {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.range-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  background: #f3f4f6;
  color: #6b7280;
  transition: all 0.3s ease;
}

.range-btn.active {
  background: linear-gradient(135deg, #007aff, #0056b3);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.podium { display: flex; align-items: flex-end; justify-content: center; gap: 24rpx; margin: 20rpx 0 32rpx; }
.podium-item { width: 180rpx; background: #fff; border-radius: 16rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,.06); padding: 16rpx; text-align: center; position: relative; }
.podium-item.gold { transform: translateY(-16rpx); border: 2rpx solid #f59e0b; }
.podium-item.silver { border: 2rpx solid #9ca3af; }
.podium-item.bronze { border: 2rpx solid #b45309; }
.avatar { width: 96rpx; height: 96rpx; border-radius: 50%; margin: 6rpx auto 10rpx; }
.nickname { font-weight: 600; color: #111827; }
.signature { font-size: 20rpx; color: #8e8e93; margin-top: 4rpx; font-style: italic; }
.score { color: #4b5563; margin-top: 4rpx; }

/* PodiumÁªüËÆ°‰ø°ÊÅØ */
.podium-stats {
  margin-top: 8rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.podium-stat-item {
  font-size: 18rpx;
  color: #6b7280;
  background: rgba(0, 0, 0, 0.05);
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  text-align: center;
}
.rank-badge { position: absolute; top: -12rpx; right: -12rpx; width: 40rpx; height: 40rpx; border-radius: 50%; background: linear-gradient(135deg,#6366f1,#4f46e5); color: #fff; display:flex; align-items:center; justify-content:center; font-weight:700; }

.rank-list { background: #fff; border-radius: 16rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,.06); }
.rank-item { 
  display: flex; 
  align-items: center; 
  padding: 20rpx; 
  border-bottom: 2rpx solid #f3f4f6; 
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateX(0);
  opacity: 1;
}
.rank-item:active { 
  background-color: #f9fafb; 
  transform: translateX(8rpx);
}
.rank-number { width: 64rpx; text-align: center; font-weight: 700; color: #4f46e5; }
.rank-avatar { width: 72rpx; height: 72rpx; border-radius: 50%; margin: 0 16rpx; }
.rank-info { flex: 1; }
.rank-nickname { font-weight: 700; color: #111827; }
.rank-sign { font-size: 22rpx; color: #8e8e93; margin-top: 4rpx; font-style: italic; }
.rank-primary-stat { color: #6b7280; font-size: 24rpx; margin-top: 4rpx; }
.rank-stats { margin-top: 8rpx; }
.stat-item { 
  display: inline-block; 
  font-size: 20rpx; 
  color: #8e8e93; 
  margin-right: 16rpx; 
  background: #f3f4f6; 
  padding: 4rpx 8rpx; 
  border-radius: 8rpx; 
  margin-bottom: 4rpx;
}
.rank-score { font-weight: 800; color: #111827; margin-right: 8rpx; }
.expand-icon { color: #c7c7cc; font-size: 32rpx; }

/* ÁªüËÆ°ÂàáÊç¢ÊåâÈíÆ */
.stats-toggle {
  text-align: center;
  padding: 24rpx;
  background: #fff;
  margin-top: 16rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,.06);
}

.stats-toggle text {
  color: #007aff;
  font-size: 28rpx;
  font-weight: 500;
}

/* Âä†ËΩΩÂíåÁ©∫Áä∂ÊÄÅ */
.loading-state, .empty-state { 
  text-align: center; 
  color: #6b7280; 
  padding: 80rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 16rpx;
}

.loading-state {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.empty-state {
  font-size: 28rpx;
}

.empty-state::before {
  content: "üèÜ";
  display: block;
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.3;
}