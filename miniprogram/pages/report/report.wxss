/* pages/report/report.wxss */
page, .page-container { height: 100%; background-color: #f2f2f7; display: flex; flex-direction: column; }
.page-container { padding: 40rpx; box-sizing: border-box; }
.header { margin-bottom: 40rpx; }
.title { font-size: 56rpx; font-weight: 700; }
.summary { font-size: 28rpx; color: #8e8e93; margin-top: 16rpx; }
.tabs { display: flex; margin-bottom: 24rpx; background-color: #e5e5ea; border-radius: 16rpx; padding: 8rpx; }
.tab-item { flex: 1; text-align: center; padding: 16rpx; font-size: 28rpx; color: #8e8e93; font-weight: 500; border-radius: 12rpx; transition: all 0.2s ease; }
.tab-item.active { background-color: #ffffff; color: #1c1c1e; font-weight: 600; }
.content-container { flex-grow: 1; height: 100%; }
.student-list { background-color: #ffffff; border-radius: 24rpx; padding: 0 32rpx; }
.student-card { display: flex; align-items: center; padding: 32rpx 0; border-bottom: 1rpx solid #f2f2f7; }
.student-card:last-child { border-bottom: none; }
.avatar { width: 88rpx; height: 88rpx; border-radius: 50%; margin-right: 24rpx; }
.info { flex-grow: 1; }
.nickname { font-size: 32rpx; font-weight: 500; }
.time { font-size: 24rpx; color: #8e8e93; margin-top: 4rpx; }
.score { font-size: 36rpx; font-weight: 700; color: #007aff; }
.score.high { color: #34c759; }
.score.low { color: #ff3b30; }
.empty-state, .loading-state { text-align: center; margin-top: 200rpx; color: #8e8e93; font-size: 32rpx; }