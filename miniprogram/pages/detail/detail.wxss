/* 删除/清空时轻微摇动反馈（容器需有类名 shake） */
.shake { animation: shake 180ms ease-out; }

/* 动画定义 */
@keyframes popIn {
  0% { transform: scale(.7); opacity: .2; }
  60% { transform: scale(1.08); opacity: .95; }
  100% { transform: scale(1); opacity: 1; }
}
@keyframes tilePick {
  0% { transform: scale(1); box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); }
  40% { transform: scale(1.12); box-shadow: 0 10rpx 20rpx rgba(79,70,229,.25); }
  100% { transform: scale(1); box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); }
}
@keyframes shake {
  0% { transform: translateX(0); }
  25% { transform: translateX(-6rpx); }
  50% { transform: translateX(4rpx); }
  75% { transform: translateX(-3rpx); }
  100% { transform: translateX(0); }
}