/* 现代化练习页面样式 - 移动端优化版 */
page {
  --primary-color: #6366f1;
  --primary-light: #818cf8;
  --primary-dark: #4f46e5;
  --secondary-color: #f59e0b;
  --success-color: #10b981;
  --success-light: #34d399;
  --error-color: #ef4444;
  --error-light: #f87171;
  --warning-color: #f59e0b;
  --info-color: #3b82f6;
  
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;
  
  --spacing-xs: 4rpx;
  --spacing-sm: 8rpx;
  --spacing-md: 16rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  --spacing-2xl: 48rpx;
  --spacing-3xl: 64rpx;
  
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  --radius-xl: 24rpx;
  --radius-full: 9999rpx;
  
  --shadow-sm: 0 1rpx 2rpx 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10rpx 15rpx -3rpx rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20rpx 25rpx -5rpx rgba(0, 0, 0, 0.1);
  
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-2xl: 40rpx;
  --font-size-3xl: 48rpx;
  --font-size-4xl: 56rpx;
  
  --transition-fast: 0.15s ease;
  --transition-normal: 0.3s ease;
  --transition-slow: 0.5s ease;
  
  background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  color: var(--gray-900);
  line-height: 1.5;
}

.page-container {
  min-height: 100vh;
  padding: var(--spacing-xl);
  box-sizing: border-box;
  padding-bottom: calc(100rpx + var(--spacing-xl) * 2); /* 为固定的主要操作按钮区域留出空间 */
}

.header {
  margin-bottom: var(--spacing-xl);
}

.progress-container {
  background: white;
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-lg);
  margin-bottom: var(--spacing-lg);
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: var(--gray-200);
  border-radius: var(--radius-full);
  overflow: hidden;
  margin-bottom: var(--spacing-sm);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
  border-radius: var(--radius-full);
  transition: width var(--transition-normal);
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: var(--font-size-sm);
  color: var(--gray-600);
  font-weight: 500;
}

.question-zone {
  background: white;
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  box-shadow: var(--shadow-lg);
  margin-bottom: var(--spacing-xl);
  text-align: center;
  position: relative;
  overflow: hidden;
}

.question-zone::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
}

.mc-question-word {
  font-size: var(--font-size-4xl);
  font-weight: 700;
  color: var(--gray-900);
  margin-bottom: var(--spacing-lg);
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -2rpx;
}

/* 统一拼写题标题风格为 MC 风格（紫色） */
.sp-question-word { display:none; }

.sp-question-hint {
  font-size: var(--font-size-md);
  color: var(--gray-600);
  margin-top: var(--spacing-md);
}

.phonetics-area {
  display: inline-flex;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--gray-100);
  border-radius: var(--radius-full);
  transition: all var(--transition-fast);
  margin-top: var(--spacing-md);
}
.phonetics-area.replay {
  margin-top: var(--spacing-lg);
}

.phonetics-area:active {
  background: var(--gray-200);
  transform: scale(0.95);
}

.phonetics {
  font-size: var(--font-size-lg);
  color: var(--gray-600);
  margin-right: var(--spacing-sm);
  font-family: 'Courier New', monospace;
}

.pronounce-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.7;
}

/* 移动端优化的交互区域 */
.interaction-zone {
  position: fixed;
  bottom: 120rpx; /* 仅为继续按钮预留空间 */
  left: 0;
  right: 0;
  padding: var(--spacing-xl) var(--spacing-xl) calc(var(--spacing-xl) + 20rpx);
  background: white;
  border-top-left-radius: var(--radius-xl);
  border-top-right-radius: var(--radius-xl);
  /* 去除底部阴影线 */
  box-shadow: none;
  z-index: 100;
}



/* 回看导航箭头（几乎透明） */
.review-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx; /* 更小更淡 */
  height: 56rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.02);
  color: rgba(0,0,0,0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  user-select: none;
}
.review-nav.left { left: -16rpx; }
.review-nav.right { right: -16rpx; }
.review-nav.disabled { opacity: 0.15; pointer-events: none; }

.mc-options-grid {
  display: grid;
  grid-template-columns: 1fr; /* 单列布局，避免重叠 */
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
  min-height: 520rpx; /* 固定高度占位，避免判分后整体上移 */
}

.mc-option-card {
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-fast);
  border: 2rpx solid transparent;
  position: relative;
  overflow: hidden;
  min-height: 120rpx; /* 确保有足够的触摸区域 */
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.mc-option-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  opacity: 0;
  transition: opacity var(--transition-fast);
}

.mc-option-card:active::before {
  opacity: 0.1;
}

.mc-option-card.correct {
  background: linear-gradient(135deg, var(--success-color), var(--success-light));
  color: white;
  transform: scale(1.02);
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  animation: correctGlow 0.6s ease-out;
  position: relative;
  z-index: 10; /* 确保正确选项在错误选项之上 */
}

.mc-option-card.incorrect {
  background: linear-gradient(135deg, var(--error-color), var(--error-light));
  color: white;
  transform: scale(1.0); /* 不缩放，不位移 */
  box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.3);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  /* 取消大范围抖动动画，使用轻微高亮过渡 */
  animation: incorrectSoft 0.3s ease-out;
  position: relative;
  z-index: 1;
}

@keyframes correctGlow {
  0% { 
    transform: scale(1);
    box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.2);
  }
  50% { 
    transform: scale(1.02);
    box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
  }
  100% { 
    transform: scale(1.02);
    box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
  }
}

@keyframes incorrectSoft {
  0% { box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.2); }
  100% { box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.3); }
}



.option-def {
  font-size: var(--font-size-lg);
  font-weight: 500;
  line-height: 1.6;
  position: relative;
  z-index: 1;
  flex: 1;
  padding-right: var(--spacing-xl);
}

.feedback-icon {
  position: absolute;
  right: var(--spacing-xl);
  top: 50%;
  transform: translateY(-50%) scale(0);
  font-size: var(--font-size-3xl);
  font-weight: bold;
  transition: transform var(--transition-slow);
  z-index: 2;
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.feedback-icon.correct {
  transform: translateY(-50%) scale(1);
  background: rgba(255, 255, 255, 0.2);
  animation: correctPulse 0.6s ease-out;
}

.feedback-icon.incorrect {
  transform: translateY(-50%) scale(1);
  background: rgba(255, 255, 255, 0.2);
  animation: incorrectShake 0.6s ease-out;
}

@keyframes correctPulse {
  0% { transform: translateY(-50%) scale(0); }
  50% { transform: translateY(-50%) scale(1.2); }
  100% { transform: translateY(-50%) scale(1); }
}

@keyframes incorrectShake {
  0% { transform: translateY(-50%) scale(0); }
  25% { transform: translateY(-50%) scale(1.1); }
  50% { transform: translateY(-50%) scale(0.9); }
  75% { transform: translateY(-50%) scale(1.05); }
  100% { transform: translateY(-50%) scale(1); }
}

/* 拼写输入区域优化 */
.sp-input-container {
  margin-bottom: var(--spacing-xl);
}

.sp-input {
  width: 100%;
  height: 120rpx;
  background: white;
  border-radius: var(--radius-lg);
  text-align: center;
  font-size: var(--font-size-2xl);
  font-weight: 600;
  box-shadow: var(--shadow-md);
  border: 2rpx solid transparent;
  transition: all var(--transition-fast);
  margin-bottom: var(--spacing-lg);
  letter-spacing: 2rpx;
}

.sp-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

.sp-input.correct {
  border-color: var(--success-color);
  background: rgba(16, 185, 129, 0.05);
  box-shadow: 0 0 0 4rpx rgba(16, 185, 129, 0.1);
}

.sp-input.incorrect {
  border-color: var(--error-color);
  background: rgba(239, 68, 68, 0.05);
  box-shadow: 0 0 0 4rpx rgba(239, 68, 68, 0.1);
}

/* 去除固定底部主按钮（改为与交互区共位） */
.primary-action-zone { display: none; }

/* 统一的主要操作按钮样式 - 心理学优化版 */
.primary-action-btn {
  width: 100%;
  height: 100rpx;
  background: var(--gray-300);
  color: white;
  font-size: var(--font-size-lg);
  font-weight: 600;
  border-radius: var(--radius-lg);
  transition: all var(--transition-normal);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.primary-action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.6s ease;
}

/* 确认按钮 - 温暖的橙色，传达积极期待 */
.primary-action-btn.active {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
  transform: translateY(-2rpx);
}

.primary-action-btn.active::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.2), transparent);
  border-radius: var(--radius-lg);
}

/* 继续按钮 - 成功后的绿色，传达成就感 */
.primary-action-btn.continue {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
  animation: successPulse 0.8s ease-out;
}

.primary-action-btn.continue::after {
  content: '✓';
  position: absolute;
  right: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  animation: celebrate 0.6s ease-out;
}

/* 按钮按下效果 */
.primary-action-btn:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.primary-action-btn:active::before {
  left: 100%;
}

/* 成功脉冲动画 */
@keyframes successPulse {
  0% { 
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
  }
  50% { 
    transform: scale(1.05);
    box-shadow: 0 12rpx 32rpx rgba(16, 185, 129, 0.6), 0 0 0 8rpx rgba(16, 185, 129, 0.2);
  }
  100% { 
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
  }
}

/* 庆祝图标动画 */
@keyframes celebrate {
  0% { 
    transform: scale(0) rotate(0deg);
    opacity: 0;
  }
  50% { 
    transform: scale(1.3) rotate(180deg);
    opacity: 1;
  }
  100% { 
    transform: scale(1) rotate(360deg);
    opacity: 1;
  }
}

/* 简化的成功提示 - 调整位置避免遮挡 */
.success-toast {
  position: fixed;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(16, 185, 129, 0.95);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  z-index: 9999;
  pointer-events: none;
  animation: toastSlideIn 0.4s ease-out;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.success-icon {
  width: 32rpx;
  height: 32rpx;
  background: white;
  color: #10b981;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.success-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* 简化的动画 */
@keyframes toastSlideIn {
  0% { 
    transform: translateX(-50%) translateY(-20rpx);
    opacity: 0;
  }
  100% { 
    transform: translateX(-50%) translateY(0);
    opacity: 1;
  }
}

/* 新：交互区内的错误卡片（不遮挡按钮） */
.sp-error-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 6rpx 18rpx rgba(239,68,68,.18);
  border: 2rpx solid rgba(239,68,68,.12);
  position: relative;
  z-index: 2;
  margin-bottom: 12rpx;
}



.error-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.error-icon {
  width: 40rpx;
  height: 40rpx;
  background: #ff3b30;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.error-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff3b30;
}

.spelling-comparison {
  margin-bottom: 24rpx;
}

.comparison-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.comparison-row:last-child {
  margin-bottom: 0;
}

.comparison-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.comparison-word {
  display: flex;
  gap: 8rpx;
  flex: 1;
}

.spelling-char {
  min-width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 8rpx;
  font-family: 'Courier New', monospace;
}

.spelling-char.correct {
  background: rgba(16, 185, 129, 0.1);
  color: #059669;
  border: 1rpx solid rgba(16, 185, 129, 0.3);
}

.spelling-char.incorrect {
  background: rgba(239, 68, 68, 0.1);
  color: #dc2626;
  border: 1rpx solid rgba(239, 68, 68, 0.3);
  text-decoration: line-through;
}

.correct-answer .spelling-char {
  background: rgba(16, 185, 129, 0.15);
  color: #059669;
  border: 1rpx solid rgba(16, 185, 129, 0.4);
  animation: correctHighlight 0.6s ease-out;
}



/* 错误反馈动画 */
@keyframes errorSlideUp {
  0% { 
    transform: translateY(100%);
    opacity: 0;
  }
  100% { 
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes correctHighlight {
  0% { 
    background: rgba(16, 185, 129, 0.15);
  }
  50% { 
    background: rgba(16, 185, 129, 0.3);
    transform: scale(1.05);
  }
  100% { 
    background: rgba(16, 185, 129, 0.15);
    transform: scale(1);
  }
}

/* 反馈区域优化 */
.footer-feedback {
  position: fixed;
  bottom: calc(100rpx + var(--spacing-xl) * 2); /* 为统一按钮留出空间 */
  left: 0;
  width: 100%;
  background: white;
  border-top-left-radius: var(--radius-xl);
  border-top-right-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
  padding: var(--spacing-xl);
  transform: translateY(100%);
  transition: transform var(--transition-normal);
  z-index: 100; /* 降低层级，确保按钮在上方 */
  max-height: 60vh; /* 限制最大高度 */
  overflow-y: auto; /* 内容过多时可滚动 */
}

.footer-feedback.visible {
  transform: translateY(0);
}

.feedback-message {
  font-size: var(--font-size-lg);
  font-weight: 600;
  margin-bottom: var(--spacing-lg);
  text-align: center;
  padding: var(--spacing-md);
  border-radius: var(--radius-md);
  background: var(--gray-50);
}

.feedback-message.correct {
  color: var(--success-color);
  background: rgba(16, 185, 129, 0.1);
  border: 2rpx solid rgba(16, 185, 129, 0.2);
}

.feedback-message.incorrect {
  color: var(--error-color);
  background: rgba(239, 68, 68, 0.1);
  border: 2rpx solid rgba(239, 68, 68, 0.2);
}

.knowledge-container {
  background: var(--gray-50);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  border: 2rpx solid var(--gray-200);
}

.knowledge-item {
  margin-bottom: var(--spacing-md);
}

.knowledge-item:last-child {
  margin-bottom: 0;
}

.knowledge-title {
  font-size: var(--font-size-sm);
  font-weight: 600;
  color: var(--gray-600);
  margin-bottom: var(--spacing-xs);
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.knowledge-content {
  font-size: var(--font-size-md);
  color: var(--gray-800);
  line-height: 1.6;
}

/* 保留旧的continue-btn样式以确保向后兼容 */
.continue-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: white;
  font-size: var(--font-size-lg);
  font-weight: 600;
  border-radius: var(--radius-lg);
  transition: all var(--transition-fast);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.continue-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.continue-btn:active::before {
  left: 100%;
}

.continue-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-sm);
}

.continue-btn-text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.spelling-diff-container {
  background: var(--gray-50);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
