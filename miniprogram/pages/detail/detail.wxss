/* miniprogram/pages/detail/detail.wxss (最终·无干扰版) */
page, .page-container, .finish-container {
  height: 100%;
  background-color: #f2f2f7;
  display: flex;
  flex-direction: column;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.page-container {
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 20rpx;
  flex-shrink: 0;
}
.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #e5e5ea;
  border-radius: 8rpx;
  overflow: hidden;
}
.progress-bar-inner {
  height: 100%;
  background-color: #007aff;
  transition: width 0.3s ease;
}
.stats {
  text-align: right;
  font-size: 24rpx;
  color: #8e8e93;
  margin-top: 16rpx;
}

.question-zone {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.mc-question-word {
  font-size: 80rpx;
  font-weight: 700;
  color: #1c1c1e;
}
.phonetics-area {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding: 10rpx 20rpx;
  border-radius: 18rpx;
  transition: background-color 0.2s;
}
.phonetics-area:active {
  background-color: #e5e5ea;
}
.phonetics {
  font-size: 36rpx;
  color: #8e8e93;
}
.pronounce-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 16rpx;
}

.sp-question-word {
  font-size: 40rpx;
  font-weight: 500;
  color: #1c1c1e;
  line-height: 1.6;
}
.sp-question-hint {
  font-size: 28rpx;
  color: #8e8e93;
  margin-top: 24rpx;
}

.interaction-zone {
  flex-shrink: 0;
  padding-bottom: 250rpx;
}
.mc-options-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
}
.mc-option-card {
  height: 140rpx;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  color: #1c1c1e;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
  text-align: left;
  line-height: 1.5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.card-hover {
  transform: scale(0.98);
}
.option-def {
  font-size: 32rpx;
  white-space: normal;
  padding-right: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.mc-option-card.correct { background-color: #34c759; color: white; }
.mc-option-card.incorrect { background-color: #ff3b30; color: white; }
.feedback-icon {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%) scale(0);
  font-size: 48rpx;
  font-weight: bold;
  transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}
.feedback-icon.correct,
.feedback-icon.incorrect {
  transform: translateY(-50%) scale(1);
}

.sp-input {
  height: 120rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  text-align: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 4rpx solid transparent;
  transition: border-color 0.3s;
  margin-top: 40rpx;
}
.sp-input.correct { border-color: #34c759; }
.sp-input.incorrect { border-color: #ff3b30; }
.sp-input[disabled] { background-color: #e5e5ea; }
.sp-submit-btn {
  margin-top: 32rpx;
  height: 100rpx;
  background-color: #c7c7cc;
  color: white;
  font-size: 36rpx;
  transition: background-color 0.2s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1;
}
.sp-submit-btn::after {
  border: none;
}
.sp-submit-btn.active { background-color: #007aff; }
.sp-submit-btn[disabled] { background-color: #c7c7cc !important; }

.footer-feedback {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 32rpx 40rpx calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 100;
}
.footer-feedback.visible {
  transform: translateY(0);
}
.feedback-message {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}
.feedback-message.correct { color: #34c759; }
.feedback-message.incorrect { color: #ff3b30; }

.knowledge-container {
  background-color: #f2f2f7;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  text-align: left;
}
.knowledge-item {
  margin-bottom: 20rpx;
}
.knowledge-item:last-child {
  margin-bottom: 0;
}
.knowledge-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #8e8e93;
  margin-bottom: 8rpx;
}
.knowledge-content {
  font-size: 28rpx;
  color: #1c1c1e;
  line-height: 1.6;
}

.continue-btn {
  height: 100rpx;
  background-color: #007aff;
  color: white;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1;
}
.continue-btn::after {
  border: none;
}

.spelling-diff-container {
  background-color: #f2f2f7;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}
.diff-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.diff-row:last-child {
  margin-bottom: 0;
}
.diff-label {
  font-size: 28rpx;
  color: #8e8e93;
  width: 120rpx;
  flex-shrink: 0;
}
.diff-word {
  font-size: 40rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
}
.char-correct {
  color: #34c759;
}
.char-incorrect {
  color: #ff3b30;
  text-decoration: line-through;
}
.correct-row .phonetics-area {
  margin-left: auto;
  margin-top: 0;
}

.finish-container {
  justify-content: flex-start;
  padding: 0;
}
.finish-header {
  width: 100%;
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}
.finish-title { 
  font-size: 64rpx;
  font-weight: 700;
}
.finish-subtitle { 
  font-size: 32rpx;
  color: #8e8e93;
  margin-top: 24rpx;
}
.finish-score-card {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background-color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 60rpx 0;
}
.score-value { font-size: 80rpx; font-weight: 700; color: #007aff; }
.score-label { font-size: 28rpx; color: #8e8e93; }

.summary-scroll-area {
  width: 100%;
  height: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.summary-list-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #8e8e93;
  margin-bottom: 16rpx;
  padding-left: 16rpx;
}
.summary-list {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
}
.summary-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
}
.summary-item:last-child {
  border-bottom: none;
}
.summary-word-info {
  display: flex;
  flex-direction: column;
}
.summary-word {
  font-size: 34rpx;
  font-weight: 500;
  color: #1c1c1e;
}
.summary-def {
  font-size: 28rpx;
  color: #8e8e93;
  margin-top: 4rpx;
}
.summary-status {
  font-size: 40rpx;
}
.summary-status.correct {
  color: #34c759;
}
.summary-status.incorrect {
  color: #ff3b30;
}

.finish-actions {
  width: 100%;
  padding: 32rpx 40rpx calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background-color: #f2f2f7;
  flex-shrink: 0;
}
.finish-btn {
  width: 100%;
  height: 100rpx;
  background-color: #007aff;
  color: white;
  font-size: 36rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1;
}
.finish-btn::after {
  border: none;
}