  align-items: center;
  justify-content: center;
  animation: popIn 200ms ease-out;
}

/* 提交后舞台状态动画 - 统一脉冲版 */
.sp-stage.stage-correct .stage-letter {
  background: linear-gradient(135deg, rgba(16,185,129,.25), rgba(16,185,129,.2));
  color: #059669;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
  animation: letterSuccessPulse 0.8s ease-out;
}

.sp-stage.stage-incorrect .stage-letter {
  background: linear-gradient(135deg, rgba(239,68,68,.25), rgba(239,68,68,.2));
  color: #b91c1c;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
  animation: letterErrorPulse 0.8s ease-out;
}

/* 字母成功脉冲动画 */
@keyframes letterSuccessPulse {
  0% { 
    transform: scale(1);
    box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
  }
  25% { 
    transform: scale(1.15);
    box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.5);
  }
  50% { 
    transform: scale(1.05);
    box-shadow: 0 6rpx 16rpx rgba(16, 185, 129, 0.4);
  }
  75% { 
    transform: scale(1.1);
    box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.5);
  }
  100% { 
    transform: scale(1);
    box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
  }
}

/* 字母错误脉冲动画 */
@keyframes letterErrorPulse {
  0% { 
    transform: scale(1);
    box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
  }
  25% { 
    transform: scale(1.15);
    box-shadow: 0 8rpx 20rpx rgba(239, 68, 68, 0.5);
  }
  50% { 
    transform: scale(1.05);
    box-shadow: 0 6rpx 16rpx rgba(239, 68, 68, 0.4);
  }
  75% { 
    transform: scale(1.1);
    box-shadow: 0 8rpx 20rpx rgba(239, 68, 68, 0.5);
  }
  100% { 
    transform: scale(1);
    box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
  }
}
