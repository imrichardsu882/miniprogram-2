/* 重新设计的主页 */
.home-container {
  flex: 1;
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  animation: slideInUp 0.3s ease-out;
  height: 100vh;
  overflow: hidden;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 模块1：顶部导航区 */
.top-nav {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-md) 0;
  margin-bottom: var(--spacing-md);
}

.app-name {
  font-size: 20px;
  font-weight: 700;
  color: var(--text-primary);
}

.nav-icon {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--card-background);
  box-shadow: var(--shadow-light);
  transition: all 0.2s ease;
}

.nav-icon:active {
  transform: scale(0.95);
}

.icon-settings {
  font-size: 18px;
}

/* 模块2：核心转化区 */
.primary-action-section {
  margin-bottom: var(--spacing-lg);
}

.primary-action-card {
  background: var(--primary-gradient);
  border-radius: var(--border-radius);
  padding: var(--spacing-xl);
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  box-shadow: var(--shadow-medium);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.primary-action-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.primary-card-hover {
  transform: scale(0.98);
}

.primary-card-hover::before {
  opacity: 1;
}

.action-icon {
  width: 60px;
  height: 60px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.icon-book {
  font-size: 28px;
  color: var(--card-background);
}

.action-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.action-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--card-background);
}

.action-subtitle {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

.action-arrow {
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.arrow-icon {
  font-size: 18px;
  color: var(--card-background);
}

/* 模块3：辅助功能区 */
.secondary-actions-section {
  margin-bottom: var(--spacing-lg);
}

.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--spacing-md);
}

.action-card {
  background: var(--card-background);
  border-radius: var(--border-radius-small);
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-sm);
  box-shadow: var(--shadow-light);
  transition: all 0.2s ease;
  position: relative;
}

.card-hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-medium);
}

.card-badge {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
}

.badge-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--accent-color);
}

.card-icon {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-xs);
}

.leaderboard-card .card-icon {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.teacher-card .card-icon {
  background: linear-gradient(135deg, var(--success-color) 0%, #45A049 100%);
}

.icon-trophy, .icon-teacher {
  font-size: 24px;
  color: var(--card-background);
}

.card-text {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
}

/* 模块4：版本更新区 */
.updates-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  max-height: 300px; /* 设置最大高度 */
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
  flex-shrink: 0;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
}

.unread-indicator {
  background: var(--accent-color);
  border-radius: 12px;
  padding: 4px 8px;
  min-width: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.unread-count {
  font-size: 12px;
  font-weight: 600;
  color: var(--card-background);
}

.updates-scroll {
  flex: 1;
  min-height: 0;
  overflow-y: auto;
  overflow-x: hidden;
}

.updates-container {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  padding-bottom: var(--spacing-lg);
}

.update-card {
  background: var(--card-background);
  border-radius: var(--border-radius-small);
  padding: var(--spacing-md);
  box-shadow: var(--shadow-light);
  transition: all 0.2s ease;
  position: relative;
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.update-card-hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-medium);
}

.update-card.unread {
  border-left: 4px solid var(--primary-color);
}

.update-card.read {
  opacity: 0.7;
}

.update-badge {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
}

.update-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.update-title {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
}

.update-description {
  font-size: 12px;
  color: var(--text-secondary);
  line-height: 1.4;
}

.update-arrow {
  width: 24px;
  height: 24px;
  background: var(--background-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.update-arrow .arrow-icon {
  font-size: 12px;
  color: var(--text-secondary);
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-container {
  background: var(--card-background);
  border-radius: var(--border-radius);
  padding: var(--spacing-xl);
  margin: var(--spacing-lg);
  width: calc(100% - 2 * var(--spacing-lg));
  max-width: 400px;
  box-shadow: var(--shadow-medium);
  animation: slideInUp 0.3s ease-out;
}

.modal-header {
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-input-wrapper {
  margin-bottom: var(--spacing-lg);
}

.modal-input {
  width: 100%;
  padding: var(--spacing-md);
  border: 2px solid var(--text-light);
  border-radius: var(--border-radius-small);
  font-size: 16px;
  background: var(--background-color);
  transition: border-color 0.2s ease;
}

.modal-input:focus {
  border-color: var(--primary-color);
  outline: none;
}

.modal-actions {
  display: flex;
  gap: var(--spacing-md);
}

.modal-button {
  flex: 1;
  padding: var(--spacing-md);
  border-radius: var(--border-radius-small);
  border: none;
  font-size: 16px;
  font-weight: 600;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 44px;
}

.modal-button.cancel {
  background: var(--background-color);
  color: var(--text-secondary);
}

.modal-button.confirm {
  background: var(--primary-color);
  color: var(--card-background);
}

.modal-button:active {
  transform: scale(0.98);
}