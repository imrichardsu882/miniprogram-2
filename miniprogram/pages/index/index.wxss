/* index.wxss (最终·新版授权流程) */
page {
  background-color: #f2f2f7;
  height: 100%;
}

.container {
  height: 100%;
}

.state-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.auth-container {
  justify-content: space-between; 
  padding: 15% 40rpx 5% 40rpx;
}

.header {
  width: 100%;
  text-align: left;
  margin-bottom: 0; 
  padding: 0 20rpx;
}

.auth-main {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-button {
  min-width: 400rpx; 
  width: auto; 
  padding: 0 60rpx; 
  height: 96rpx;
  background: #007aff;
  color: white;
  font-size: 34rpx;
  font-weight: 500; 
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s; 
}

.button-hover {
  opacity: 0.9;
  transform: scale(0.98);
}

.footer-area {
  width: 100%;
  text-align: center;
}

.guest-button {
  display: inline-block;
  margin-bottom: 32rpx;
  font-size: 28rpx;
  color: #8e8e93;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  transition: background-color 0.2s;
}

.guest-button:active {
  background-color: #e5e5ea;
}

.footer-notice {
  font-size: 24rpx;
  color: #c7c7cc;
  text-align: center;
  line-height: 1.6;
}

/* ★★★ 新增：新版授权页样式 ★★★ */
.profile-setup-container {
  justify-content: space-around;
}

.profile-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.avatar-wrapper {
  padding: 0;
  border: 6rpx solid #ffffff;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 80rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.nickname-label {
  width: 100%;
  text-align: left;
  font-size: 28rpx;
  color: #8e8e93;
  margin-bottom: 16rpx;
  padding-left: 16rpx;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.confirm-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #007aff;
  color: white;
  font-size: 34rpx;
  border-radius: 24rpx;
  text-align: center;
  margin-top: 80rpx;
}
.confirm-btn:active {
  opacity: 0.8;
}

.title {
  font-size: 64rpx;
  font-weight: 700;
  color: #1c1c1e;
}

.subtitle {
  font-size: 34rpx;
  color: #8e8e93;
  margin-top: 16rpx;
}

.card-list {
  width: 100%;
}

.role-card {
  width: 100%;
  padding: 50rpx 40rpx;
  border-radius: 32rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.card-hover {
  transform: scale(0.97);
}

.teacher-card {
  background: linear-gradient(135deg, #007aff, #0056b3);
}

.student-card {
  background: linear-gradient(135deg, #34c759, #28a745);
}

.card-text {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
}

.card-description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-container {
  width: 80%;
  max-width: 600rpx;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 28rpx;
  overflow: hidden;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  padding: 40rpx 40rpx 0 40rpx;
  color: #1c1c1e;
}

.modal-subtitle {
  font-size: 28rpx;
  text-align: center;
  padding: 16rpx 40rpx 40rpx 40rpx;
  color: #8e8e93;
}

.modal-input-wrapper {
  padding: 0 40rpx 40rpx;
}

.modal-input {
  background-color: #e5e5ea;
  padding: 20rpx;
  border-radius: 16rpx;
  text-align: center;
  font-size: 32rpx;
}

.modal-actions {
  display: flex;
  width: 100%;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.modal-button {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
}

.modal-button:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.modal-button-divider {
  width: 1rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.cancel {
  color: #007aff;
}

.confirm {
  color: #007aff;
  font-weight: 600;
}