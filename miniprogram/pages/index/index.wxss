/* 设计规范变量 */
page {
  --primary-color: #4A90E2;
  --primary-gradient: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  --secondary-color: #7C6CFF;
  --accent-color: #FF6B6B;
  --success-color: #4CAF50;
  --background-color: #F8F9FA;
  --card-background: #FFFFFF;
  --text-primary: #2C3E50;
  --text-secondary: #7F8C8D;
  --text-light: #BDC3C7;
  --border-radius: 16px;
  --border-radius-small: 12px;
  --shadow-light: 0 2px 8px rgba(0, 0, 0, 0.08);
  --shadow-medium: 0 4px 16px rgba(0, 0, 0, 0.12);
  --spacing-xs: 8px;
  --spacing-sm: 12px;
  --spacing-md: 16px;
  --spacing-lg: 24px;
  --spacing-xl: 32px;
  
  background-color: var(--background-color);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: var(--background-color);
}

.loading-animation {
  margin-bottom: var(--spacing-lg);
}

.loading-dots {
  display: flex;
  gap: var(--spacing-xs);
}

.dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: var(--primary-color);
  animation: pulse 1.4s ease-in-out infinite both;
}

.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes pulse {
  0%, 80%, 100% { opacity: 0.3; transform: scale(0.8); }
  40% { opacity: 1; transform: scale(1); }
}

.loading-text {
  color: var(--text-secondary);
  font-size: 16px;
}

/* 授权页面 */
.auth-container {
  flex: 1;
  position: relative;
  background: var(--background-color);
}

.auth-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.auth-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 60%;
  background: var(--primary-gradient);
  border-radius: 0 0 50% 50% / 0 0 20% 20%;
}

.auth-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.1;
  background-image: radial-gradient(circle at 25% 25%, var(--primary-color) 2px, transparent 2px);
  background-size: 40px 40px;
}

.auth-content {
  position: relative;
  z-index: 1;
  padding: var(--spacing-xl) var(--spacing-lg);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 底部声明 - 简化版本 */
.footer-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  padding: 16px;
  padding-bottom: calc(16px + env(safe-area-inset-bottom));
  z-index: 9999;
  background: linear-gradient(to top, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.4));
}

.footer-text {
  font-size: 14px;
  color: #666666;
  background: rgba(255, 255, 255, 0.9);
  padding: 10px 18px;
  border-radius: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  display: inline-block;
  border: 1px solid rgba(0, 0, 0, 0.1);
  font-weight: 500;
  letter-spacing: 0.5px;
  line-height: 1.3;
  opacity: 0.8;
}

.auth-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.auth-title {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.main-title {
  font-size: 32px;
  font-weight: 700;
  color: var(--card-background);
}

.sub-title {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.8);
}

.auth-actions {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  width: 100%;
  max-width: 300px;
}

.auth-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--border-radius);
  border: none;
  font-size: 16px;
  font-weight: 600;
  transition: all 0.2s ease;
  min-height: 48px;
}

.auth-button.primary {
  background: var(--card-background);
  color: var(--primary-color);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  border: 2px solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
}

.auth-button.primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.auth-button.primary:active::before {
  opacity: 1;
}

.auth-button.secondary {
  background: rgba(255, 255, 255, 0.95);
  color: var(--primary-color);
  border: 2px solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(10px);
  position: relative;
  overflow: hidden;
}

.auth-button.secondary::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.auth-button.secondary:active::before {
  opacity: 1;
}

.button-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

