/* 苹果系统风格设计 - 三通英语助手主页 */
page {
  background: #f2f2f7;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', sans-serif;
  color: #1d1d1f;
  line-height: 1.6;
  height: 100%;
}

.container {
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* ===== 加载状态样式 ===== */
.loading-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f2f2f7;
}

.loading-animation {
  margin-bottom: 60rpx;
}

.loading-dots {
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #007aff;
  animation: loading-bounce 1.4s ease-in-out infinite both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes loading-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.loading-text {
  font-size: 32rpx;
  color: #86868b;
  font-weight: 500;
}

/* ===== 授权登录页面样式 ===== */
.auth-container {
  width: 100%;
  height: 100%;
  background: #f2f2f7;
  display: flex;
  flex-direction: column;
}

.auth-background {
  display: none;
}

.auth-gradient {
  display: none;
}

.auth-pattern {
  display: none;
}

.auth-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 120rpx 60rpx 80rpx;
}

.auth-header {
  text-align: center;
}

.app-logo {
  margin-bottom: 40rpx;
}

.logo-icon {
  font-size: 120rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.1));
}

.auth-title {
  margin-bottom: 80rpx;
}

.main-title {
  display: block;
  font-size: 72rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 16rpx;
}

.sub-title {
  display: block;
  font-size: 32rpx;
  color: #86868b;
  font-weight: 400;
}

.auth-actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.auth-button {
  width: 100%;
  height: 112rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 36rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  border: none;
  position: relative;
  overflow: hidden;
}

.auth-button.primary {
  background: #007aff;
  color: #ffffff;
}

.auth-button.secondary {
  background: #ffffff;
  color: #007aff;
  border: 2rpx solid #d1d1d6;
}

.auth-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.button-hover {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.2);
}

.button-hover::before {
  left: 100%;
}

